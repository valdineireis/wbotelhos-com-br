<!DOCTYPE html>

<html>
  <head>
    <title><%= CONFIG["author"] %></title>
    <%= javascript_include_tag "jquery-1.7.2.min", "jquery.taby.min", "javascript" %>
    <%= stylesheet_link_tag "stylesheet" %>
    <%= csrf_meta_tags %>
    <%= auto_discovery_link_tag(:rss, feed_url) %>
  </head>
  <body>
    <div id="wrapper">
      <div id="top">
        <%= render "shared/header" %>
        <%= render "shared/flash_messages" %>
      </div>

      <div id="content">
        <section id="main">
          <%= yield %>
        </section>

        <aside id="sidebar">
          <%= render "articles/search" %>
          <%= render sidebar.categories %>
          <%= render sidebar.articles %>
          <%= render sidebar.links %>
          <%= render sidebar.admin %>
        </aside>
      </div>

      <div id="credits">Developed by Washington Botelho</div>

      <footer id="footer">
        <%= render "shared/footer" %>
      </footer>
    </div>
  </body>
</html>
