<div class="lab">
  <div class="image">
    <%= link_to lab.image.present? ? image_tag(lab.image, alt: lab.name, height: 120, width: 160) : '', lab.url, target: '_blank' %>
  </div>

  <div class="info">
    <h2 class="name"><%= link_to lab.name, lab.url %></h2>
    <div class="description"><%= lab.description.try :html_safe %></div>
    <div id="repository-<%= lab.slug %>" class="github-info">
      <p><%= t 'lab.loading' %></p>
    </div>

    <div class="links">
      <% if is_logged? %>
        <%= link_to content_tag(:i, nil, class: 'icon-edit icon-large'), labs_edit_path(lab), title: t('navigation.lab.edit') %>
      <% end %>
      <%= link_to content_tag(:i, nil, class: 'icon-github icon-large'), lab.github, title: 'Github', target: '_blank' %>
      <%= link_to content_tag(:i, nil, class: 'icon-play icon-large'), lab.url, title: 'Demo', target: '_blank' %>
    </div>
  </div>
</div>
