<div id="labs">
  <% @labs.each do |lab| %>
    <div class="lab">
      <div class="image">
        <%= link_to image_tag("raty.jpg", { :width => 170, :height => 120 }), "http://wbotelhos/#{lab.slug}", { :target => "_blank" } %>
      </div>

      <div class="info">
        <h2 class="name"><%= link_to lab.name, lab.slug %></h2>
        <div class="description"><%= lab.description %></div>
        <div class="socialy">
          <%= link_to image_tag("github.png", { :width => 16, :height => 16 }), "http://wbotelhos/#{lab.slug}", { :target => "_blank" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
