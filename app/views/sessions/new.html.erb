<%= form_tag login_path, onsubmit: 'return false;' do %>
  <p>
    <%= label_tag :email, t('activerecord.attributes.user.email') %>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password, t('activerecord.attributes.user.password') %>
    <%= password_field_tag :password %>
  </p>

  <p id="human">
    <%= label_tag :bot, 'b0t?' %>
    <%= check_box_tag :bot, :true, :true %>
  </p>

  <%= submit_tag t('form.buttons.login') %>
<% end %>

<script type="text/javascript">
  $(function() {
    var form = $('form');

    $('#email').focus().select();

    $('#human input').on('change', function(evt) {
      if ($(this).is(':checked')) {
        form.attr('onsubmit', 'return false;');
      } else {
        form.removeAttr('onsubmit');
      }
    });
  });
</script>
