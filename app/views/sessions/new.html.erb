<%= form_tag login_path do %>
  <p>
    <%= label_tag :email, t('activerecord.attributes.user.email') %>
    <%= email_field_tag :email %>
  </p>

  <p>
     <%= label_tag :password, t('activerecord.attributes.user.password') %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= check_box_tag :human %>
  </p>

  <%= submit_tag t('form.buttons.login') %>
<% end %>

<script type="text/javascript">
  $(function() {
    $('#email').focus().select();

    $('input[name="commit"]').on('click', function(evt) {
      if ($('#human').is(':checked')) {
        evt.preventDefault();
      }
    });
  });
</script>
